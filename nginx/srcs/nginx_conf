server {
    listen 80;
    listen [::]:80 ;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name nginx;
    ssl_certificate     /etc/nginx/ssl/cert.pem;
    ssl_certificate_key /etc/nginx/ssl/key.key;
    
    root    /var/www/nginx;
    index   my.html;

    location / {
        try_files $uri $uri/ =404;
        #try_files $uri $uri/ /index.php$is_args$args;
    }
}